<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MenuPedidoPizzaPersonalizada">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="430dp"
            android:layout_height="266dp"
            android:layout_margin="8dp"
            app:srcCompat="@drawable/pizzaroja" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="SELECCIONE EL TAMAÑO:"
                />

            <RadioGroup
                android:id="@+id/rgTamPizza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal"
                android:textAlignment="center">
                <RadioButton
                    android:id="@+id/rbMediana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textSize="16sp"
                    android:text="Mediana"/>

                <RadioButton
                    android:id="@+id/rbFamiliar"
                    android:layout_width="133dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:textSize="16sp"
                    android:text="Familiar" />
            </RadioGroup>

        <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/listIngred1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@color/verdeBck"
            android:orientation="vertical">
            <CheckBox
                android:id="@+id/cbBacon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bacon" />
            <CheckBox
                android:id="@+id/cbChampi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Champiñones" />
            <CheckBox
                android:id="@+id/cbjamon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jamón" />
            <CheckBox
                android:id="@+id/cbqueso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Queso" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/listIngred2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@color/verdeBck"
            android:orientation="vertical">
            <CheckBox
                android:id="@+id/salsaBbq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salsa-BBQ" />
            <CheckBox
                android:id="@+id/cbTernera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ternera" />
            <CheckBox
                android:id="@+id/cbmozarella"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mozarella" />
            <CheckBox
                android:id="@+id/cbNata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nata" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/listIngred3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@color/verdeBck"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/cbHuevo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Huevo" />
            <CheckBox
                android:id="@+id/cbPimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pimiento" />
            <CheckBox
                android:id="@+id/cbSalchichas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salchichas" />
            <CheckBox
                android:id="@+id/cbCebolla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cebolla" />
             </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:orientation="horizontal"
            android:paddingStart="24dp"
            android:paddingEnd="8dp"
            android:layout_margin="8dp">

            <Button
                android:id="@+id/btnAtrasPizzaPerso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:padding="4dp"
                android:text="ATRÁS"
                android:textColor="@color/colorBurdeos"
                android:textSize="16sp">
            </Button>

            <Button
                android:id="@+id/btnConfirmPersonalizada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:padding="16dp"
                android:text="CONFIRMAR PEDIDO"
                android:textColor="@color/colorBurdeos"
                android:textSize="16sp">
            </Button>
        </LinearLayout>

        <CheckBox
            android:id="@+id/pizzaPersoFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBurdeos"
            android:textSize="16sp"
            android:text="Marcar como favorita"
            android:paddingStart="4dp"
            android:paddingEnd="8dp"
            android:layout_margin="16dp"/>
    </LinearLayout>
</ScrollView>
